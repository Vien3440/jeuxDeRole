{% extends "base.html.twig" %}

{% block body %}
    <div class="formStats">
        <h3>{{j.email}}</h3>
        <button id="generator">Stats</button>
        <input id="rdStats" type="text" name="fname" readonly="" value="0">
        {{ form_start(formulaire,{'attr':{'action':path("upStats")}}) }}
        {{ form_widget(formulaire.pv,{ 'attr': {'min': pv, 'pattern':'\d*' } })}}
        {{ form_widget(formulaire.att,{ 'attr': {'min': att } })}}
        {{ form_widget(formulaire.def,{ 'attr': {'min': def } })}}
        {{ form_widget(formulaire.mov,{ 'attr': {'min': mov,'readonly':' '} })}}<br>
        <input type="submit" value="Validation" />
    </div>


    {{form_end (formulaire)}}
{% endblock %}

{% block javascripts %}<script src={{asset("js/stats.js")}}></script> {% endblock %}